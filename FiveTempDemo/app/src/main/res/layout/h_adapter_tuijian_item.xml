<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/ic_launcher"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/h_tuijian_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/h_tuijian_img"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/h_tuijian_img"
        android:layout_toRightOf="@+id/h_tuijian_img"
        android:text="风中一批小帅狼"
        android:textColor="#f00f00" />

    <TextView
        android:id="@+id/h_tuijian_tv_sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/h_tuijian_img"
        android:layout_alignLeft="@+id/h_tuijian_tv_name"
        android:layout_alignStart="@+id/h_tuijian_tv_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/h_tuijian_tv_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/h_tuijian_img"
        android:layout_alignStart="@+id/h_tuijian_img"
        android:layout_below="@+id/h_tuijian_tv_sj"
        android:layout_marginTop="11dp"
        android:text="耐心等待..." />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_pingbi"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/pingbi" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_fuzhi"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/fuzhi" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_jubao"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/jubao" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_jian"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        fresco:placeholderImage="@mipmap/jian" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/h_tuijian_jia"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        fresco:placeholderImage="@mipmap/jia" />


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/h_tuijian_vv"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView15" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_img1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/h_tuijian_img1"
        android:layout_marginTop="100dp"
        android:src="@mipmap/raw_1499933216"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/imageView15_1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_img1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/h_tuijian_img1"
        android:layout_marginTop="100dp"
        android:src="@mipmap/raw_1499933215"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/h_tuijian_xin1"
        android:text="520"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView15"
        android:layout_below="@+id/imageView15"
        />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_xin1"
        android:layout_below="@+id/h_tuijian_xin1"
        android:layout_marginTop="10dp"
        android:src="@mipmap/huixing"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/imageView16_1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_xin1"
        android:layout_below="@+id/h_tuijian_xin1"
        android:layout_marginTop="10dp"
        android:src="@mipmap/huixing"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/h_tuijian_xing1"
        android:text="125"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView16"
        android:layout_below="@+id/imageView16"
        />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_xing1"
        android:layout_below="@+id/h_tuijian_xing1"
        android:layout_marginTop="10dp"
        android:src="@mipmap/pl2" />



    <TextView
        android:id="@+id/h_tuijian_zhuan1"
        android:text="666"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView17"
        android:layout_below="@+id/imageView17"
        />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/h_tuijian_zhuan1"
        android:layout_below="@+id/h_tuijian_zhuan1"
        android:layout_marginTop="10dp"
        android:src="@mipmap/pl1" />
    <TextView
        android:id="@+id/h_tuijian_ping1"
        android:text="1万"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView18"
        android:layout_below="@+id/imageView18"
        />


    <TextView
        android:id="@+id/h_tuijian_tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/h_tuijian_vv"
        android:layout_alignStart="@+id/h_tuijian_vv"
        android:layout_below="@+id/h_tuijian_vv"
        android:layout_marginTop="14dp"
        android:text="骑车上高速：不错" />

    <TextView
        android:id="@+id/h_tuijian_tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/h_tuijian_tv_p1"
        android:layout_alignRight="@+id/h_tuijian_tv_p1"
        android:layout_below="@+id/h_tuijian_tv_p1"
        android:layout_marginTop="11dp"
        android:text="骑车上高速：不错" />

    <ImageView
        android:id="@+id/h_tuijian_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/h_tuijian_vv"
        android:layout_below="@+id/h_tuijian_vv"
        android:src="@mipmap/shenping" />

</RelativeLayout>
