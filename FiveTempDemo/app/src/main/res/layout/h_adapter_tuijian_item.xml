<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        fresco:roundAsCircle="true"
        android:id="@+id/h_tuijian_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/h_tuijian_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/h_tuijian_img"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/h_tuijian_img"
        android:text="风中一批小帅狼"
        android:textColor="#f00f00"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/h_tuijian_img" />

    <TextView
        android:id="@+id/h_tuijian_tv_sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/h_tuijian_img"
        android:layout_alignStart="@+id/h_tuijian_tv_name"
        android:text="TextView"
        android:layout_alignLeft="@+id/h_tuijian_tv_name" />

    <TextView
        android:id="@+id/h_tuijian_tv_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/h_tuijian_img"
        android:layout_below="@+id/h_tuijian_tv_sj"
        android:layout_marginTop="11dp"
        android:text="耐心等待..."
        android:layout_alignLeft="@+id/h_tuijian_img" />







    <ImageView
        android:id="@+id/h_tuijian_img4"
        android:src="@mipmap/pinbi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageView
        android:id="@+id/h_tuijian_img3"
        android:src="@mipmap/copylink1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageView
        android:id="@+id/h_tuijian_img2"
        android:src="@mipmap/tanhao"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageView
        android:id="@+id/h_tuijian_img1"
        android:src="@mipmap/jia2"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="38dp"
        android:layout_height="38dp" />


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/h_tuijian_vv"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_alignStart="@+id/h_tuijian_tv_ping"
        android:layout_below="@+id/h_tuijian_tv_ping"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/h_tuijian_tv_ping" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/huixin"
        android:layout_marginTop="50dp"
       android:layout_alignLeft="@+id/h_tuijian_img1"
        android:id="@+id/imageView15"
        android:layout_below="@+id/h_tuijian_img1"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/huixing"
        android:layout_marginTop="10dp"
       android:layout_alignLeft="@+id/imageView15"
        android:id="@+id/imageView16"
        android:layout_below="@+id/imageView15"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/pl2"
        android:layout_marginTop="10dp"
       android:layout_alignLeft="@+id/imageView16"
        android:id="@+id/imageView17"
        android:layout_below="@+id/imageView16"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/pl1"
        android:layout_marginTop="10dp"
       android:layout_alignLeft="@+id/imageView17"
        android:id="@+id/imageView18"
        android:layout_below="@+id/imageView17"
        />




    <TextView
        android:id="@+id/h_tuijian_tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/h_tuijian_vv"
        android:layout_below="@+id/h_tuijian_vv"
        android:layout_marginTop="14dp"
        android:text="骑车上高速：不错"
        android:layout_alignLeft="@+id/h_tuijian_vv" />

    <TextView
        android:id="@+id/h_tuijian_tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/h_tuijian_tv_p1"
        android:layout_below="@+id/h_tuijian_tv_p1"
        android:layout_marginTop="11dp"
        android:text="骑车上高速：不错"
        android:layout_alignRight="@+id/h_tuijian_tv_p1" />








</RelativeLayout>
