<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    >


    <ImageView
        android:id="@+id/h_tuijian_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/h_tuijian_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/h_tuijian_img"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/h_tuijian_img"
        android:text="风中一批小帅狼"
        android:textColor="#f00f00"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/h_tuijian_img" />

    <TextView
        android:id="@+id/h_tuijian_tv_sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/h_tuijian_img"
        android:layout_alignStart="@+id/h_tuijian_tv_name"
        android:text="TextView"
        android:layout_alignLeft="@+id/h_tuijian_tv_name" />

    <TextView
        android:id="@+id/h_tuijian_tv_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/h_tuijian_img"
        android:layout_below="@+id/h_tuijian_tv_sj"
        android:layout_marginTop="11dp"
        android:text="耐心等待..."
        android:layout_alignLeft="@+id/h_tuijian_img" />

    <VideoView
        android:id="@+id/h_tuijian_vv"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_alignStart="@+id/h_tuijian_tv_ping"
        android:layout_below="@+id/h_tuijian_tv_ping"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/h_tuijian_tv_ping" />

    <TextView
        android:id="@+id/h_tuijian_tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/h_tuijian_vv"
        android:layout_below="@+id/h_tuijian_vv"
        android:layout_marginTop="14dp"
        android:text="骑车上高速：不错"
        android:layout_alignLeft="@+id/h_tuijian_vv" />

    <TextView
        android:id="@+id/h_tuijian_tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/h_tuijian_tv_p1"
        android:layout_below="@+id/h_tuijian_tv_p1"
        android:layout_marginTop="11dp"
        android:text="骑车上高速：不错"
        android:layout_alignRight="@+id/h_tuijian_tv_p1" />
    <ImageView
        android:src="@mipmap/shenping"
        android:layout_below="@+id/h_tuijian_vv"
        android:layout_alignRight="@id/h_tuijian_vv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
